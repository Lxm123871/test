@model FAS202024131135.Models.Asset

@{
    ViewData["Title"] = "Delete";
}

<body style="background-color: #F5F5FF">
    <h1>删除资产</h1>

    <h3 style="color: red;font-size: 35px;">
        您确定要删除它吗？
    </h3>
    <div style="background-color:  #F0F8FF;">
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AssetName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AssetName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AssetSize)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AssetSize)
            </dd>
            <!--显示资产图片-->
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CategoryPhoto)
            </dt>
            <dd class="col-sm-10">
                <!--圆角边框,里面放1张资产图片-->
                <img src="~/images/@Model.CategoryPhoto" style="width:20%" />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Data)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Data)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StorageLocation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StorageLocation)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.CategoryDescription)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Employee)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Employee.Email)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="AssetID" />
            <input type="submit" value="删除" class="btn btn-danger" /> |
            <a asp-action="Index">回到主列表</a>
        </form>
    </div>
</body>
